        <item name="textAppearanceHeadline6">@style/TextAppearance.Cinemania.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Cinemania.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Cinemania.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Cinemania.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Cinemania.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Cinemania.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Cinemania.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

    </style>

