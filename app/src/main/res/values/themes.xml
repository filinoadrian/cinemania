        <item name="scrimBackground">@color/white_50_alpha_060</item>
        <item name="android:statusBarColor">@color/blue_50_alpha_060</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <!--Shape-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Cinemania.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Cinemania.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Cinemania.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Cinemania.Headline2</item>
