<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="eventListener"
            type="com.far_sstrwnt.cinemania.ui.common.EntityActions" />

        <variable
            name="movie"
            type="com.far_sstrwnt.cinemania.model.MovieEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:onClick="@{() -> eventListener.openDetail(movie.id)}">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="92dp"
            android:layout_height="138dp"
            android:scaleType="fitXY"
            android:contentDescription="Movie Poster"
            app:poster="@{movie.posterPath}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{movie.title}"
            android:textColor="#1F75FE"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/movie_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Avengers: Infinity War"/>

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{Float.toString(movie.voteAverage)}"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/movie_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="9.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>