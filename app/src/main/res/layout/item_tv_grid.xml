<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="entity"
            type="com.far_sstrwnt.cinemania.model.Entity" />

        <variable
            name="eventListener"
            type="com.far_sstrwnt.cinemania.ui.common.EventActions" />

        <variable
            name="tv"
            type="com.far_sstrwnt.cinemania.model.TvEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> eventListener.openDetail(entity.TV, tv.id)}"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_poster"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:background="#ADBBC4"
                android:scaleType="centerCrop"
                android:contentDescription="TV Poster"
                app:poster="@{tv.posterPath}"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>