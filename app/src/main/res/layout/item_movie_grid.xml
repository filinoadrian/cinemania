<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>

        <variable
            name="entity"
            type="com.far_sstrwnt.cinemania.model.Entity" />

        <variable
            name="eventListener"
            type="com.far_sstrwnt.cinemania.ui.common.EventActions" />
        
        <variable
            name="movie"
            type="com.far_sstrwnt.cinemania.model.MovieEntity" />
    </data>
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> eventListener.openDetail(entity.MOVIE, movie.id)}"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:background="#ADBBC4"
                android:scaleType="centerCrop"
                android:contentDescription="Movie Poster"
                app:poster="@{movie.posterPath}"/>
            
        </LinearLayout>
    
    </com.google.android.material.card.MaterialCardView>

</layout>